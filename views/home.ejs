<%- include("./partials/layout-top.ejs") %>
<section style="background-image: url('/static/assets/bg-2.jpg');">
  <div class="container py-5">
    <h1>Resume Builder</h1>
    <p class="lead fw-bold">Having a well formatted and sleek looking resume will boost your chances
      of getting a job by 20%</p>
    <p class="fw-bold">Build instant resumes FREE! <br/>No Login Required!</p>
  </div>
</section>
<div class="container my-3">
  <h3 class="text-capitalize">Pick a resume format</h3>
  <hr/>
  <div class="d-flex flex-row gap-2 flex-wrap align-items-center justify-content-center">
    <% resumes.forEach((resume, index) => { %>
      <div class="card mb-2" style="width: 18rem;">
        <img src="<%- resume.thumbnail %>" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%- resume.name %> </h5>
          <p class="card-text"><%- resume.description %> </p>
          <a href="/temp<%- index %>" class="btn btn-primary">Use Resume</a>
        </div>
      </div>
    <% }) %>
  </div>
</div>
<%- include("./partials/layout-bottom.ejs") %>
